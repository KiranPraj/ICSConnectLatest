<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/space10"
                android:layout_marginLeft="@dimen/spaceLR">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/ll_chat_attachment"
                android:gravity="end">

            <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ic_attachment_chat"
                    android:id="@+id/img_attchment_view_me"
                    android:adjustViewBounds="false"
                    android:layout_gravity="end"/>

            <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:max="100"
                    android:progress="50"/>
            <TextView
                    android:id="@+id/remaining_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10s"
                    android:layout_gravity="start"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginRight="@dimen/space10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space5"
                    android:drawableRight="@drawable/ic_clock"
                    android:text="5:04pm"
                    android:textColor="@color/colorTextInfo"
                    android:textSize="@dimen/h4"
            />
            <TextView
                    android:id="@+id/tv_chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:padding="@dimen/space10"
                    android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_chat_me"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>