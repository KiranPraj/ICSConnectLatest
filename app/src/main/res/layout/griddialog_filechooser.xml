<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp">

    <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>
    <LinearLayout android:orientation="horizontal"
                  android:gravity="center"

                  android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:layout_gravity="center"
                android:gravity="center">
            <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp" android:layout_margin="4dp" android:layout_gravity="center"/>
            <TextView
                    android:text="Choose Photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_margin="4dp"
                    android:layout_gravity="center" android:textStyle="bold" android:textColor="@color/colorTextBlack"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:layout_gravity="center"
                android:gravity="center">
            <ImageView
                    android:id="@+id/img_camera1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_gallery"
                    android:layout_marginStart="70dp"
                    android:layout_gravity="center" android:layout_margin="@dimen/h4"/>
            <TextView
                    android:text="Doccuments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_margin="4dp"
                    android:layout_gravity="center" android:textColor="@color/colorTextBlack"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>