<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/space15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                <TextView
                        android:text="Select year"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/space5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dropdownbackground"
                        android:id="@+id/sp_month"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/space15"
                        >
                </TextView>
                <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="0dp"
                        android:padding="@dimen/space5"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dropdownbackground"
                        android:id="@+id/sp_year"
                        android:layout_margin="@dimen/space15"
                        >

                </androidx.appcompat.widget.AppCompatSpinner>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    app:strokeColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:text="SUBMIT"
                    android:theme="@style/MatButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeWidth="2dp"

                    />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView android:layout_width="80dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="LeaveType"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        android:background="@drawable/tablerowdrawable"
                        />
                <TextView android:layout_width="100dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"

                        />
                <TextView android:layout_width="100dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />
                <TextView android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:textAlignment="center"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />
                <TextView android:layout_width="120dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="DateOfApply"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />
                <TextView android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Reason"
                        android:textAlignment="center"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"


                        />
                <TextView android:layout_width="150dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="CompAgainst"
                        android:background="@drawable/tablerowdrawable"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"

                        />
                <TextView android:layout_width="80dp"
                        android:textAlignment="center"
                        android:background="@drawable/tablerowdrawable"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />

                <TextView android:layout_width="150dp"
                        android:textAlignment="center"
                        android:background="@drawable/tablerowdrawable"
                        android:layout_height="wrap_content"
                        android:text="Approver"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />
                <TextView android:layout_width="120dp"
                        android:textAlignment="center"
                        android:background="@drawable/tablerowdrawable"
                        android:layout_height="wrap_content"
                        android:text="HalfDayAgainst"
                        android:textSize="@dimen/space15"
                        android:textStyle="bold"
                        />
            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_viewtimesheet"
                    >
            </androidx.recyclerview.widget.RecyclerView>
        </TableLayout>
    </HorizontalScrollView>
</LinearLayout>