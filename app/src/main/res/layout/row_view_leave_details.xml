<?xml version="1.0" encoding="utf-8"?>

<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:background="@drawable/tablerowdrawable"
        android:layout_height="wrap_content">
    <TextView android:layout_width="80dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="LeaveType"
            android:textSize="@dimen/space15"
            
            android:background="@drawable/tablerowdrawable"
            android:id="@+id/leave_type"
            />
    <TextView android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="From Date"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            
            android:id="@+id/from_date"

            />
    <TextView android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="To Date"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            
            android:id="@+id/to_date"
            />
    <TextView android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textAlignment="center"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            
            android:id="@+id/days"
            />
    <TextView android:layout_width="120dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="DateOfApply"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            
            android:id="@+id/date_of_apply"
            />
    <TextView android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:textAlignment="center"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            android:id="@+id/reason"


            />
    <TextView android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="CompAgainst"
            android:background="@drawable/tablerowdrawable"
            android:textSize="@dimen/space15"
            
            android:id="@+id/compagainst"

            />
    <TextView android:layout_width="80dp"
            android:textAlignment="center"
            android:background="@drawable/tablerowdrawable"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="@dimen/space15"
            
            android:id="@+id/status"
            />

    <TextView android:layout_width="150dp"
            android:textAlignment="center"
            android:background="@drawable/tablerowdrawable"
            android:layout_height="wrap_content"
            android:text="Approver"
            android:textSize="@dimen/space15"
            
            android:id="@+id/approver"
            />
    <TextView android:layout_width="120dp"
            android:textAlignment="center"
            android:background="@drawable/tablerowdrawable"
            android:layout_height="wrap_content"
            android:text="HalfDayAgainst"
            android:textSize="@dimen/space15"
            
            android:id="@+id/halfday_against"
            />
</TableRow>
